<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30px">

    <TextView
        android:id="@+id/MealDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Navn"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/MealDetailRecipeTopBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/MealDetailName">
        <LinearLayout
            android:id="@+id/MealDetailIngredientsBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="205dp">
            <View
                android:id="@+id/lineDividerDescTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:layout_below="@id/MealDetailDescription"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/MealDetailMealDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Beskrivelse"
                android:textSize="14sp"
                android:textStyle="italic"/>
            <View
                android:id="@+id/lineDividerRecipe"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:layout_below="@id/weekDetailMealDesc"
                android:background="@android:color/darker_gray" />
            <TextView
                android:id="@+id/MealDetailIngredientsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredienser:"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/MealDetailIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navn"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/MealPicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="-205dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/MealDetailDirectionsBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/MealDetailRecipeTopBlock"
        android:layout_above="@+id/editButton">
        <LinearLayout
            android:id="@+id/MealDetailDescBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/MealDetailDirectionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instrukser:"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/MealDetailDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navn"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="editMeal"
            android:layout_alignParentBottom="true"
            android:text="Opdater"
            />


</RelativeLayout>