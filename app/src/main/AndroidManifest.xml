<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodplanermobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodplanerMobile"
        android:name=".services.FoodplanerService"
        android:usesCleartextTraffic="true">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WeekDetailedActivity"
            android:parentActivityName=".MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>
        <activity android:name=".MealOverviewActivity"
            android:parentActivityName=".MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>
        <activity android:name=".CreateMealActivity"
            android:parentActivityName=".MealOverviewActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MealOverviewActivity"></meta-data>
        </activity>
        <activity android:name=".MealDetailsActivity"
            android:parentActivityName=".MealOverviewActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MealOverviewActivity"></meta-data>
        </activity>
    </application>

</manifest>